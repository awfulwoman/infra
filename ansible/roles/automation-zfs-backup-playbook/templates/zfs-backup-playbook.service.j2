[Unit]
Description=ZFS Backup Infrastructure Playbook Service
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory={{ home_repo_dir }}
ExecStart=/usr/bin/ansible-playbook \
  {{ zfs_backup_playbook_path }} \
  --inventory {{ zfs_backup_playbook_inventory }} \
  --vault-password-file {{ zfs_backup_playbook_vault_password_file }}
StandardOutput=journal
StandardError=journal
TimeoutStartSec=3600

[Install]
WantedBy=multi-user.target
