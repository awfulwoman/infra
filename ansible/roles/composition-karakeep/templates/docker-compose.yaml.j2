# code: language=ansible
name: "{{ composition_name }}"
services:
  karakeep:
    image: ghcr.io/karakeep-app/karakeep:0.27.0
    restart: unless-stopped
    ports:
      - "127.0.0.1:8714:3000"
    env_file:
      - .environment_vars
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.karakeep.rule=Host(`karakeep.{{ domain_name }}`)"
      - "traefik.http.routers.karakeep.tls=true"
      - "traefik.http.routers.karakeep.tls.certresolver=letsencrypt"
    environment:
      MEILI_ADDR: http://meilisearch:7700
      BROWSER_WEB_URL: http://chrome:9222
      # OPENAI_API_KEY: ...
      DATA_DIR: /data
    volumes:
      - "{{ composition_config }}/karakeep:/data"
    networks:
      - "{{ default_docker_network }}"

  chrome:
    image: gcr.io/zenika-hub/alpine-chrome:124
    restart: unless-stopped
    command:
      - --no-sandbox
      - --disable-gpu
      - --disable-dev-shm-usage
      - --remote-debugging-address=0.0.0.0
      - --remote-debugging-port=9222
      - --hide-scrollbars
    networks:
      - "{{ default_docker_network }}"

  meilisearch:
    image: getmeili/meilisearch:v1.13.3
    restart: unless-stopped
    env_file:
      - .environment_vars
    environment:
      MEILI_NO_ANALYTICS: "true"
    volumes:
      - "{{ composition_config }}/meilisearch:/meili_data"
    networks:
      - "{{ default_docker_network }}"

networks:
  "{{ default_docker_network }}":
    external: true
