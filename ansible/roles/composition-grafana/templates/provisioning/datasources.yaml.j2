apiVersion: 1

datasources:
  - name: {{ composition_grafana_victoriametrics_name }}
    type: prometheus
    access: proxy
    uid: VictoriaMetrics
    url: {{ composition_grafana_victoriametrics_url }}
    isDefault: true
    editable: false
    jsonData:
      timeInterval: "60s"
      httpMethod: POST
      tlsSkipVerify: false

  - name: {{ composition_grafana_loki_name }}
    type: loki
    access: proxy
    uid: Loki
    url: {{ composition_grafana_loki_url }}
    isDefault: false
    editable: false
    jsonData:
      maxLines: 1000
