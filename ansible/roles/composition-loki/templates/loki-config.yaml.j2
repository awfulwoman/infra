auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096

common:
  path_prefix: /loki
  storage:
    filesystem:
      chunks_directory: /loki/chunks
      rules_directory: /loki/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

query_range:
  results_cache:
    cache:
      embedded_cache:
        enabled: true
        max_size_mb: 100

schema_config:
  configs:
    - from: 2020-10-24
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

storage_config:
  boltdb_shipper:
    active_index_directory: /loki/boltdb-shipper-active
    cache_location: /loki/boltdb-shipper-cache
    cache_ttl: 24h
    shared_store: filesystem
  filesystem:
    directory: /loki/chunks

compactor:
  working_directory: /loki/boltdb-shipper-compactor
  shared_store: filesystem
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  retention_delete_worker_count: 150

limits_config:
  retention_period: {{ composition_loki_retention_period }}
  enforce_metric_name: false
  reject_old_samples: true
  reject_old_samples_max_age: 168h
  ingestion_rate_mb: {{ composition_loki_ingestion_rate_mb }}
  ingestion_burst_size_mb: {{ composition_loki_ingestion_burst_mb }}
  max_streams_per_user: 0
  max_query_series: 100000

chunk_store_config:
  max_look_back_period: 0s

table_manager:
  retention_deletes_enabled: true
  retention_period: {{ composition_loki_retention_period }}

ruler:
  alertmanager_url: http://localhost:9093

ingester:
  chunk_idle_period: {{ composition_loki_chunk_idle_period }}
  max_chunk_age: {{ composition_loki_max_chunk_age }}
  chunk_retain_period: 30s
  chunk_encoding: snappy
  chunk_target_size: 1536000
  wal:
    enabled: true
    dir: /loki/wal
