---
name: "{{ composition_name }}"
services:
  splitwise:
    build:
      context: "{{ composition_config }}/app"
    container_name: splitwise
    restart: unless-stopped
    volumes:
      - {{ composition_config }}/data:/app/data
    env_file: .environment_vars
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.splitwise.rule=Host(`{{ composition_splitwise_domain }}`)"
      - "traefik.http.routers.splitwise.tls=true"
      - "traefik.http.routers.splitwise.tls.certresolver=letsencrypt"
      - "traefik.http.services.splitwise.loadbalancer.server.port={{ composition_splitwise_port }}"
    networks:
      - "{{ default_docker_network }}"
    healthcheck:
      test:
        [
          "CMD",
          "python3",
          "-c",
          "import urllib.request; urllib.request.urlopen('http://localhost:8000/api/v1/health')",
        ]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  "{{ default_docker_network }}":
    external: true
