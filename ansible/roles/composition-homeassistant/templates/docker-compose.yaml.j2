# code: language=ansible
name: "{{ composition_name }}"
services:
  homeassistant:
    container_name: homeassistant
    privileged: true
    network_mode: host
    image: ghcr.io/home-assistant/home-assistant:2026.2
    restart: unless-stopped
    env_file: .environment_vars
    labels:
      - "traefik.enable=true"
    volumes:
      - "{{ composition_config }}/homeassistant:/config"
      - "{{ composition_config }}/media:/media"
      - /var/run/dbus:/run/dbus:ro
      - /etc/localtime:/etc/localtime:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "-s", "-o", "/dev/null", "http://localhost:8123/"]
      interval: 1m
      timeout: 10s
      retries: 3
      start_period: 2m

  esphome:
    container_name: esphome
    privileged: true
    network_mode: host
    image: ghcr.io/esphome/esphome:2026.1
    restart: unless-stopped
    env_file: .environment_vars
    # environment:
    #   - "ESPHOME_DASHBOARD_USE_PING=true"
    labels:
      - "traefik.enable=true"
    volumes:
      - "{{ composition_config }}/esphome:/config"
      - "/etc/localtime:/etc/localtime:ro"
    healthcheck:
      test: ["CMD", "curl", "-f", "-s", "-o", "/dev/null", "http://localhost:6052/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

networks:
  "{{ default_docker_network }}":
    external: true
