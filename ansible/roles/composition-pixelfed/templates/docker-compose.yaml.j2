# code: language=ansible
name: "{{ composition_name }}"
services:
  db:
    container_name: pixelfed-db
    image: mysql:8
    restart: unless-stopped
    env_file: .environment_vars
    volumes:
      - "{{ composition_config }}/mysql:/var/lib/mysql"
      - /etc/localtime:/etc/localtime:ro
    networks:
      - "{{ default_docker_network }}"
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 1m
      timeout: 10s
      retries: 3
      start_period: 2m

  redis:
    container_name: pixelfed-redis
    image: redis:7-alpine
    restart: unless-stopped
    command: ["redis-server", "--appendonly", "yes"]
    volumes:
      - "{{ composition_config }}/redis:/data"
      - /etc/localtime:/etc/localtime:ro
    networks:
      - "{{ default_docker_network }}"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 1m
      timeout: 10s
      retries: 3
      start_period: 30s

  pixelfed:
    container_name: pixelfed-app
    build:
      context: ./src
      dockerfile: Dockerfile
    restart: unless-stopped
    env_file: .environment_vars
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.pixelfed.rule=Host(`{{ pixelfed_app_domain }}`)"
      - "traefik.http.routers.pixelfed.tls=true"
      - "traefik.http.routers.pixelfed.tls.certresolver=letsencrypt"
      - "traefik.http.routers.pixelfed-admin.rule=Host(`{{ pixelfed_admin_domain }}`)"
      - "traefik.http.routers.pixelfed-admin.tls=true"
      - "traefik.http.routers.pixelfed-admin.tls.certresolver=letsencrypt"
      - "traefik.http.routers.pixelfed-admin.service=pixelfed"
      - "traefik.http.services.pixelfed.loadbalancer.server.port=8080"
    volumes:
      - "{{ pixelfed_storage_path }}:/var/www/storage"
      - "{{ pixelfed_cache_path }}:/var/www/bootstrap/cache"
      - /etc/localtime:/etc/localtime:ro
    networks:
      - "{{ default_docker_network }}"
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-s", "-o", "/dev/null", "-w", "%{http_code}", "http://localhost:8080/"]
      interval: 1m
      timeout: 10s
      retries: 3
      start_period: 2m

  horizon:
    container_name: pixelfed-horizon
    build:
      context: ./src
      dockerfile: Dockerfile
    restart: unless-stopped
    env_file: .environment_vars
    command: ["php", "artisan", "horizon"]
    volumes:
      - "{{ composition_config }}/storage:/var/www/storage"
      - /etc/localtime:/etc/localtime:ro
    networks:
      - "{{ default_docker_network }}"
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "php", "artisan", "horizon:status"]
      interval: 1m
      timeout: 10s
      retries: 3
      start_period: 2m

  scheduler:
    container_name: pixelfed-scheduler
    build:
      context: ./src
      dockerfile: Dockerfile
    restart: unless-stopped
    env_file: .environment_vars
    command: ["php", "artisan", "schedule:work"]
    volumes:
      - "{{ composition_config }}/storage:/var/www/storage"
      - /etc/localtime:/etc/localtime:ro
    networks:
      - "{{ default_docker_network }}"
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_healthy

networks:
  "{{ default_docker_network }}":
    external: true
